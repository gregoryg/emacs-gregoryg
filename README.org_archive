  #+begin_src emacs-lisp
    (defun gjg/find-file-no-ivy ()
      (interactive)
      (let ((ivy-state ivy-mode))
        (ivy-mode -1)
        (call-interactively 'find-file)
        (ivy-mode ivy-state)))

    (global-set-key (kbd "C-x F") 'gjg/find-file-no-ivy) ; steals the default key binding from set-fill-column
